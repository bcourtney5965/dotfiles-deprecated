function gri() {
    local input="$1"
    local count="${input//[!0-9]/}"
    re='^[0-9]+$'
    if [[ $count =~ $re ]]; then
        echo "Rebasing on the last $count commits"
        git rebase -i HEAD~$count
    else
        echo "Invalid input. Usage: gri -<number>"
    fi
}



